                    <td>@utente.Email</td>
                    <td>@utente.PartitaIva</td>
                    <td>@utente.TipoCliente</td>
                    <td>
                        <form method="post" action="@Url.Action("Users", "Admin")">
                            <input type="hidden" name="utenteId" value="@utente.Id" />
                            <button type="submit">Aggiungi</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>




